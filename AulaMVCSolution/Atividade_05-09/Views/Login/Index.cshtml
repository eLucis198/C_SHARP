
@{
    ViewBag.Title = "Login";
}

<style>
    .validation-summary-errors {
        color:red !important;
    }
</style>

<div class="container-fluid">
    <div class="jumbotron">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.Label("txtLogin", "Login")
                @Html.TextBox("txtLogin", (string)ViewBag.Login, new { type = "text", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("txtSenha", "Senha")
                @Html.TextBox("txtSenha", (string)ViewBag.Login, new { type = "text", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBox("btnEntrar", "Entrar", new { type = "submit", @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>
