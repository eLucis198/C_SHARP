@model AulaMVC.Models.Produto
@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<br />
@Html.ActionLink("Listagem", "Index")
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-2 col-md-3"></div>
        <div class="col-xs-12 col-sm-2 col-md-3">
            @using (Html.BeginForm("Delete", "Produto", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.Id_Produto)
                    @Html.TextBoxFor(x => x.Id_Produto, new { @readonly = "readonly" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Descricao)
                    @Html.TextBoxFor(x => x.Descricao)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Quantidade)
                    @Html.TextBoxFor(x => x.Quantidade)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Preco_Venda)
                    @Html.TextBoxFor(x => x.Preco_Venda)
                </div>
                <div class="form-group">
                    <a>Você deseja realmente deletar?</a>
                    @Html.TextBox("btnDeletar", "DELETAR", new { type = "submit" })
                </div>
            }
        </div>
        <div class="col-xs-12 col-sm-2 col-md-3"></div>
    </div>
</div>